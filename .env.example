# Variables de entorno globales
# Copiar a .env y ajustar valores

# Dominio base
BASE_DOMAIN=surgir.online
PANEL_DOMAIN=panel.surgir.online

# Let's Encrypt
LE_EMAIL=admin@surgir.online

# PostgreSQL
POSTGRES_PASSWORD=change_this_secure_password_123
POSTGRES_USER=tenant_admin
POSTGRES_DB=tenant_master

# Django
DJANGO_SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-STRING
DEBUG=False
ALLOWED_HOSTS=panel.surgir.online,*.surgir.online

# Admin maestro
MASTER_USERNAME=admin
ALLOW_ONLY_SUPERUSER=1

# Portainer (opcional)
PORTAINER_BASE=http://portainer:9000
PORTAINER_API_KEY=
PORTAINER_ENDPOINT_ID=1

# Redis
REDIS_URL=redis://redis:6379/0

# Database URLs
DATABASE_URL=postgresql://tenant_admin:${POSTGRES_PASSWORD}@postgres:5432/tenant_master

# GitHub Integration (para deployment autom√°tico)
GITHUB_TOKEN=ghp_your_github_token_here
